#!/usr/bin/env node

'use strict';

var JAWS = require('../lib/index.js');
var program = require('commander');

program
    .version(JAWS._meta.version);

program
    .command('new')
    .description('Create a new JAWS project in the current working directory')
    .action(function() {
      JAWS.new();
    });

program
    .command('install <url>')
    .description('Installs an jaws-module')
    .action(function(url) {
      JAWS.install(url);
    });

program
    .command('tag')
    .description('Tag a lambda function to be deployed')
    .action(function() {
      JAWS.tag();
    });

program
    .command('*')
    .action(function() {
        JAWS.custom(arguments);
    });

program.parse(process.argv);
